{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise"
    ],
    "listFiles": false,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "exclude": [
    "index.d.ts",
    "dist",
    "node_modules",
    "tests/*.d.ts"
  ]
}
